<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maihao.littlerecipes">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_splash"
        android:label="RecipeLite"
        android:roundIcon="@mipmap/ic_splash_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LittleRecipes">
        <activity
            android:name=".activity.RecipeActivity"
            android:exported="true" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>